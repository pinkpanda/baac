= link_to t('.back', :default => t("helpers.links.back")), vehicules_path, :class => 'btn btn-default'
'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_vehicule_path(@vehicule), :class => 'btn btn-default'
'
