  strong= model_class.human_attribute_name(:minor_injured) + ':'
  br
  = @vehicule.minor_injured
p
  strong= model_class.human_attribute_name(:uninjured) + ':'
  br
  = @vehicule.uninjured
p
  strong= model_class.human_attribute_name(:released) + ':'
  br
  = @vehicule.released
p
  strong= model_class.human_attribute_name(:accident_id) + ':'
