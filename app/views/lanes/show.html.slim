- model_class = Lane
div class="page-header"
  h1=t '.title', :default => model_class.model_name.human.titleize

p
  strong= model_class.human_attribute_name(:name) + ':'
  br
  = @lane.name

= link_to t('.back', :default => t("helpers.links.back")), lanes_path, :class => 'btn btn-default'
'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_lane_path(@lane), :class => 'btn btn-default'
'
= link_to t('.destroy', :default => t("helpers.links.destroy")), lane_path(@lane), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
